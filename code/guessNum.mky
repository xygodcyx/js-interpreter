let right = 10;
let guess_count = 0;
while(true){
    let guess = int(input("请你猜一个数字"));
    guess_count = guess_count + 1;
    if(guess > right){
        print("猜大了");
    }else{
        if (guess == right) {
            print("猜对了");
            
            print("你一共猜了: ", guess_count, "次");
            guess_count = 0;
        } else {
            print("猜小了");
        };
    };
};